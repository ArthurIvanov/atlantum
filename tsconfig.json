{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "module": "es6",
        "target": "es5",
        "outDir": "lib",
        "moduleResolution": "node",
        "lib": ["dom", "es2016", "es2017.object"],
        "jsx": "react",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "composite": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@atlantum/*": [
                "packages/common/*/",
                "packages/components/*/",
                "packages/layout/*/",
                "packages/theme/*/",
                "packages/tokens/*",
                "packages/typography/*"
            ]
        }
    },
    "files": [],
    "exclude": [
        "node_modules",
        "dist",
        "lib",
        "__tests__",
        "**/*.test*",
        "**/*.spec*",
        "examples"
    ],
    "references": [
        { "path": "packages/components/accordion" },
        { "path": "packages/components/accordion-item" },
        { "path": "packages/components/main-header" },
        { "path": "packages/components/sidebar" },
        { "path": "packages/components/button" },
        { "path": "packages/components/card" },
        { "path": "packages/components/group" },
        { "path": "packages/components/input" },
        { "path": "packages/components/checkbox" },
        { "path": "packages/components/toggle" },
        { "path": "packages/components/label" },
        { "path": "packages/components/radio" },
        { "path": "packages/components/select" },
        { "path": "packages/tokens" },
        { "path": "packages/theme" },
        { "path": "packages/common/types" },
        { "path": "packages/layout/grid" },
        { "path": "packages/layout/column" },
        { "path": "packages/typography/heading" },
        { "path": "packages/typography/text" }
    ]
}
