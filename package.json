{
    "name": "atlantum",
    "version": "0.1.0",
    "license": "MIT",
    "description": "Flexible and easy to use design system which are based on React with Typescript",
    "private": true,
    "repository": "https://github.com/ArthurIvanov/atlantum",
    "workspaces": [
        "packages/components/*",
        "packages/layout/*",
        "packages/theme",
        "packages/common/types",
        "packages/tokens"
    ],
    "scripts": {
        "start": "webpack-dev-server --open",
        "compile": "tsc --build",
        "devbuild": "webpack --mode development",
        "build": "webpack --mode production",
        "storybook": "start-storybook -p 6006 --no-dll",
        "build-storybook": "build-storybook --no-dll",
        "test": "jest",
        "test:watch": "jest --watch",
        "update": "yarn changeset",
        "release": "yarn compile && yarn changeset publish",
        "monorepo:check": "manypkg check",
        "monorepo:fix": "manypkg fix"
    },
    "dependencies": {
        "@babel/core": "^7.11.6",
        "@changesets/cli": "^2.11.2",
        "@manypkg/cli": "^0.16.1",
        "@storybook/addon-a11y": "^6.0.28",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@types/jest": "^26.0.14",
        "@types/react": "^16.9.49",
        "@types/react-dom": "^16.9.8",
        "@types/styled-components": "^5.1.3",
        "@typescript-eslint/eslint-plugin": "^4.6.0",
        "@typescript-eslint/parser": "^4.6.0",
        "babel-loader": "^8.1.0",
        "chromatic": "^5.2.0",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "mini-css-extract-plugin": "^0.11.2",
        "prettier": "^2.1.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-is": "^17.0.1",
        "source-map-loader": "^1.1.0",
        "styled-components": "^5.2.0",
        "ts-loader": "^8.0.4",
        "ts-react-feather-icons": "^1.0.0",
        "typescript": "^4.0.3"
    },
    "devDependencies": {
        "@storybook/addon-actions": "^6.0.28",
        "@storybook/addon-essentials": "^6.0.28",
        "@storybook/addon-links": "^6.0.28",
        "@storybook/react": "^6.0.28"
    }
}
