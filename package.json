{
    "name": "atlantum",
    "version": "0.1.0",
    "license": "MIT",
    "description": "Flexible and easy to use design system which are based on React with Typescript",
    "private": true,
    "repository": "https://github.com/ArthurIvanov/atlantum",
    "workspaces": [
        "packages/components/*",
        "packages/layout/*",
        "packages/theme",
        "packages/typography/*",
        "packages/common/types",
        "packages/tokens"
    ],
    "scripts": {
        "dev": "yarn tsc --watch --preserveWatchOutput",
        "build": "tsc --build",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "test": "jest",
        "test:watch": "jest --watch",
        "update": "yarn changeset",
        "release": "yarn build && yarn changeset publish",
        "monorepo:check": "manypkg check",
        "monorepo:fix": "manypkg fix"
    },
    "dependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "styled-components": "^5.2.0"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@changesets/cli": "^2.11.2",
        "@manypkg/cli": "^0.16.1",
        "@storybook/addon-a11y": "^6.0.26",
        "@storybook/addon-actions": "^6.0.22",
        "@storybook/addon-contexts": "^5.3.21",
        "@storybook/addon-essentials": "^6.0.22",
        "@storybook/addon-links": "^6.0.22",
        "@storybook/addon-storysource": "^6.1.7",
        "@storybook/addons": "^6.1.11",
        "@storybook/react": "^6.0.22",
        "@storybook/theming": "^6.1.11",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@types/jest": "^26.0.14",
        "@types/react": "^16.9.49",
        "@types/react-dom": "^16.9.8",
        "@types/styled-components": "^5.1.3",
        "@typescript-eslint/eslint-plugin": "^4.18.0",
        "@typescript-eslint/parser": "^4.18.0",
        "babel-loader": "^8.1.0",
        "core-js": "^3.7.0",
        "html-react-parser": "^1.1.1",
        "html-webpack-plugin": "^4.5.0",
        "loki": "^0.28.1",
        "looks-same": "^7.3.0",
        "mini-css-extract-plugin": "^1.3.2",
        "prettier": "^2.2.1",
        "eslint": "^7.22.0",
        "eslint-plugin-react": "^7.22.0",
        "react-is": "^17.0.1",
        "scripty": "^2.0.0",
        "source-map-loader": "^1.1.3",
        "ts-loader": "^8.0.11",
        "typescript": "^4.0.3"
    },
    "volta": {
        "node": "14.16.0",
        "yarn": "1.22.10"
    }
}
