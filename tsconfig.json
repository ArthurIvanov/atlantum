{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "module": "esNext",
        "target": "es5",
        "outDir": "dist",
        "moduleResolution": "node",
        "lib": ["dom", "esnext"],
        "jsx": "react",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "composite": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@atlantum/*": [
                "packages/common/*/",
                "packages/components/*/",
                "packages/layout/*/",
                "packages/theme/*",
                "packages/tokens/*",
                "packages/typography/*"
            ]
        }
    },
    "files": [],
    "exclude": [
        "node_modules",
        "dist",
        "lib",
        "__tests__",
        "**/*.test*",
        "**/*.spec*"
    ],

    "references": [
        //COMPONENTS
        { "path": "packages/components/accordion" },
        { "path": "packages/components/alert" },
        { "path": "packages/components/badge" },
        { "path": "packages/components/button" },
        { "path": "packages/components/checkbox" },
        { "path": "packages/components/datepicker" },
        { "path": "packages/components/icons" },
        // LAYOUT
        { "path": "packages/layout/card" },
        { "path": "packages/layout/group" },
        { "path": "packages/layout/grid" },
        { "path": "packages/layout/items-stack" },
        { "path": "packages/layout/content" },
        { "path": "packages/layout/column" },
        { "path": "packages/layout/container" },
        // THEME
        { "path": "packages/theme/theming" },
        // TYPOGRAPHY
        { "path": "packages/typography/heading" },
        { "path": "packages/typography/text" }
    ]
}
